<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Poke" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Poke2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Poke.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Poke.Splash" parent="Poke.NoActionBar">
        <item name="android:statusBarColor">@color/tangerine_yellow</item>
        <item name="android:windowBackground">@drawable/bkg_splash</item>
    </style>

</resources>
